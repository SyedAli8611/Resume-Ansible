---
- name: Web Deployment
  hosts: samplenode2
  tasks:
    - name: Install Apache
      package:
        name: apache2
        state: present
    - name: Copy index.html to web server
      copy:
        src: index.html
        dest: /var/www/html/index.html
      become: true
    - name: Start Apache service
      service:
        name: apache2
        state: started

